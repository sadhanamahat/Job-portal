
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Jobseeker Dashboard</title>
  <style>
    /* General styling */
    * {
      scroll-behavior: smooth;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: Arial, sans-serif;
    }

    body, html {
      height: 100%;
      background:  linear-gradient(135deg, #1f4037, #99f2c8);
      color:  #fff;
      overflow-x: hidden;
    }

    /* Flex container styling */
    .container {
      display: flex;
      min-height: 100vh;
    }

    /* Sidebar styling */
    .sidebar {
      background: rgba(0, 0, 0, 0.3);
      width: 250px;
      padding: 2rem 1rem;
      position: fixed;
      height: 100vh;
      color: #fff;
      display: flex;
      flex-direction: column;
      align-items: center;
      box-shadow: 4px 0 10px rgba(0, 0, 0, 0.1);
    }

    .sidebar h2 {
      color: #fff;
      font-weight: bold;
      margin-bottom: 2rem;
      font-size: 1.8rem;
      text-align: center;
    }

    .sidebar a {
      color: #fff;
      display: block;
      padding: 0.75rem 1rem;
      font-size: 1.1rem;
      margin-bottom: 0.5rem;
      transition: background 0.3s ease, transform 0.3s ease;
      text-decoration: none;
      text-align: center;
      width: 100%;
      border-radius: 5px;
    }

    .sidebar a:hover {
      background: rgba(255, 255, 255, 0.1);
      transform: translateX(5px);
    }

    /* Main content styling */
    .content {
      margin-left: 250px;
      padding: 2rem;
      flex-grow: 1;
      background:linear-gradient(135deg, #1f4037, #99f2c8) ;
    }

    /* Header and section titles */
    h1 {
      font-size: 2.5rem;
      color: white;
      margin-bottom: 1.5rem;
    }

    h2 {
      color: white;
      margin-bottom: 1rem;
    }

    /* Form styling */
    form {
      display: flex;
      /* flex-direction: column; */
      /* background: #fff; */
      padding: 2rem;
      border-radius: 8px;
      /* box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); */
    }

    label {
      margin: 1rem 0 0.5rem;
      color: #34495e;
      font-weight: bold;
    }

    input, textarea, select {
      padding: 0.8rem;
      border: 1px solid #ddd;
      border-radius: 5px;
      font-size: 1rem;
      color: #333;
      background: #fff;
      margin-bottom: 1rem;
      transition: border-color 0.3s ease;
    }

    input:focus, textarea:focus, select:focus {
      border-color: #667eea;
      outline: none;
    }

    button {
      width: 96px;
      margin: 1px -31px;
      height: 43px;
      padding: 0.8rem;
      font-size: 1rem;
      color: #fff;
      background: #667eea;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease;
    }

    button:hover {
      background: #764ba2;
    }

    /* Job cards styling */
    .job-card {
      background: rgba(255, 255, 255, 0.2);
      padding: 1.5rem;
      margin: 1rem 0;
      border-radius: 8px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .job-card h3 {
      color: #2c3e50;
      margin-bottom: 0.5rem;
    }

    .job-card p {
      margin: 0.5rem 0;
      color: #666;
    }

    /* Job Listings and Job Applications sections */
    .section {
      padding: 2rem;
      margin: 1rem 0;
      border-radius: 8px;
      background:linear-gradient(135deg, #1f4037, #99f2c8);
      box-shadow: white;
    }

    /* Table styling */
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }

    th, td {
      padding: 10px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background: #667eea;
      color: #fff;
    }

    tr:hover {
      background: #f1f1f1;
    }

    /* Application Status Styling */
    .Pending, .pending {
      margin-top: 0.8rem;
      height: 40px;
      width: 90px;
      background-color: aqua;
      font-weight: bold;
      padding: 0.75rem;
      border-radius: 5px;
      color: black;
      text-align: center;
    }

    .Approved {
      margin-top: 0.8rem;
      height: 40px;
      width: 96px;
      background-color: limegreen;
      font-weight: bold;
      padding: 0.75rem;
      border-radius: 5px;
      color: white;
      text-align: center;
    }

    .Rejected {
      margin-top: 0.8rem;
      height: 40px;
      width: 90px;
      background-color: red;
      font-weight: bold;
      padding: 0.75rem;
      border-radius: 5px;
      color: black;
      text-align: center;
    }

    /* Responsiveness */
    @media (max-width: 768px) {
      .sidebar {
        width: 200px;
      }

      .content {
        margin-left: 200px;
      }

      .job-card {
        padding: 1rem;
      }

      .job-card h3 {
        font-size: 1rem;
      }

      .job-card button {
        font-size: 0.9rem;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <!-- Sidebar -->
    <div class="sidebar">
      <h2>Dashboard</h2>
      <a href="#job-listings">Job Listings</a>
      <a href="#applications">My Applications</a>
      <a href="/logout" class="logout">Logout</a>
    </div>

    <!-- Main Content -->
    <div class="content">
      <!-- Header -->
      <h1>Welcome to Your Dashboard</h1>

      <!-- Job Listings Section -->
      <div id="job-listings" class="section">
        <h2>Job Listings</h2>
        <div class="job-list">
          <% jobs.forEach(job => { %>
            <div class="job-card">
              <h3><%= job.jobTitle %></h3>
              <p><strong>Company:</strong> <%= job.Company.companyName %></p>
              <p><strong>Location:</strong> <%= job.location || 'N/A' %></p>
              <p><strong>Type:</strong> <%= job.jobType || 'N/A' %></p>
              <p><strong>Salary:</strong> Rs<%= job.salary || 'N/A' %></p>
              <p><strong>Description:</strong> <%= job.jobDescription || 'N/A' %></p>
              <p><strong>Posting Date:</strong> <%= job.postingDate ? job.postingDate.toDateString() : 'N/A' %></p>
              <p><strong>Expiry Date:</strong> <%= job.expiryDate ? job.expiryDate.toDateString() : 'N/A' %></p>
              <form action="/apply/<%= job.id %>" method="POST" onsubmit="return confirmApply()">
                <br>
                <button type="submit">Apply</button>
              </form>
            </div>
          <% }) %>
        </div>
      </div>

      <!-- Applications Section -->
      <div id="applications" class="section">
        <h2>Your Applications</h2>
        <div class="job-list">
          <% jobs.forEach(job => { %>
            <% if (appliedJobs[job.id]) { %> <!-- Only show jobs the user has applied for -->
              <div class="job-card">
                <p><strong>Job-Position:</strong> <%= job.jobTitle %></p>
                <p><strong>Company:</strong> <%= job.Company.companyName %></p>
                <p><strong>Location:</strong> <%= job.location || 'N/A' %></p>
                <p><strong>Type:</strong> <%= job.jobType || 'N/A' %></p>
                <p><strong>Salary:</strong> Rs<%= job.salary || 'N/A' %></p>
                <!-- Highlight application status -->
                <p>
                  <strong>Application Status:</strong>
                  <div class="<%= appliedJobs[job.id] %>">
                    <%= appliedJobs[job.id] %>
                  </div>
                </p>
              </div>
            <% } %>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
  <script>
    // JavaScript function to show confirmation dialog
    function confirmApply() {
      return confirm("Are you sure you want to apply for this job?");
    }
  </script>
</body>
</html>