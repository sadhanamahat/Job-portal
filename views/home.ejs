  <script>
  document.addEventListener('DOMContentLoaded', () => {
  // Check if the user is logged in
  const isLoggedIn = localStorage.getItem('isLoggedIn'); // Example: Replace with your login check

  const loginLink = document.getElementById('loginLink');
  const logoutButton = document.getElementById('logoutButton');

  if (isLoggedIn) {
    // If the user is logged in, show the Logout button and hide the Login link
    loginLink.style.display = 'none';
    logoutButton.style.display = 'block';
  } else {
    // If the user is not logged in, show the Login link and hide the Logout button
    loginLink.style.display = 'block';
    logoutButton.style.display = 'none';
  }
});

function logout() {
  // Clear login status (Example: replace with your logout logic)
  localStorage.removeItem('isLoggedIn');
  alert('You have been logged out.');

  // Redirect to the login page
  window.location.href = '/login';
}

